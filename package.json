{
  "name": "todoer",
  "displayName": "Todoer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:todoer.toggleTask",
    "onCommand:todoer.toggleDone"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todoer.toggleTask",
        "title": "Toggle Task",
        "category": "Todoer"
      },
      {
        "command": "todoer.toggleDone",
        "title": "Toggle Done",
        "category": "Todoer"
      }
    ],
    "keybindings": [
      {
        "command": "todoer.toggleTask",           "when": "editorTextFocus",
        "key": "alt+c",                           "mac": "alt+c"
      },
      {
        "command": "todoer.toggleDone",           "when": "editorTextFocus",
        "key": "alt+d",                           "mac": "alt+d"
      }
    ]
  },
  "scripts": {
    "watch": "tsc --watch",
    "fmt": "prettier --write src/ test/",
    "clean": "rm -rf out/",

    "lint": "eslint --ext ts src/ test/",
    "compile": "npm run lint && tsc",
    "test": "npm run compile && node ./out/test/acceptance/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "winston": "^3.7.2"
  }
}
